@model Common.Model.LettersAndAuthors
@{
    ViewBag.Title = "Författare";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Författare <small><label class="label label-warning">Administratorläge</label></small>
            <a href="/AuthorAdmin/Create" class="btn btn-default pull-right">Skapa ny författare</a>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        @if (TempData["Alert"] != null)
        { 
            @Html.Raw(TempData["Alert"])
        }
    </div>
    <div class="col-md-8 col-md-offset-2">
        @Html.Raw(Model.Render("/AuthorAdmin/?letter=", "/AuthorAdmin/Author/", "Aid", new string[] {"LastName", "FirstName"} ))
    </div>
</div>

