@model Common.Model.LettersAndBorrowers
@{
    ViewBag.Title = "Start";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Låntagare <small><label class="label label-warning">Administratorläge</label></small>
            <a href="/BorrowerAdmin/Create" class="btn btn-default pull-right">Skapa ny låntagare</a>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        @if (TempData["Alert"] != null)
        {
            @Html.Raw(TempData["Alert"])
        }
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @Html.Raw(Model.Render("/BorrowerAdmin/?letter=", "/BorrowerAdmin/Borrower/", "PersonId", new string[] {
            "LastName", "FirstName"
        }))
    </div>
</div>
